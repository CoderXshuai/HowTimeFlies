<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/register_bg"
        android:orientation="vertical">

    <ImageView
            android:layout_width="300px"
            android:layout_height="150px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:src="@drawable/register_icon" />

    <EditText
            android:id="@+id/register_username"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/xui_config_bg_edittext"
            android:drawableLeft="@drawable/user_name_icon"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="请输入用户名"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp" />

    <com.xuexiang.xui.widget.edittext.PasswordEditText
            android:id="@+id/register_password"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/xui_config_bg_edittext"
            android:drawableStart="@drawable/psw_icon"
            android:drawablePadding="10dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp" />

    <com.xuexiang.xui.widget.edittext.PasswordEditText
            android:id="@+id/password_again"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/xui_config_bg_edittext"
            android:drawableLeft="@drawable/psw_icon"
            android:drawablePadding="10dp"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#a3a3a3"
            android:textSize="14sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="15dp">

        <com.xuexiang.xui.widget.button.ButtonView
                android:id="@+id/register_submit_button"
                style="@style/ButtonView.Blue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:text="注 册"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        <com.xuexiang.xui.widget.button.ButtonView
                android:id="@+id/register_cancel_button"
                style="@style/ButtonView.Blue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:text="重 置"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>